root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.v]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 110 # lines of 120+ will trigger an error cmd/tools/vcheck-md.v

[*.{txt,out}]
insert_final_newline = false

[{Makefile,GNUmakefile}]
indent_style = tab
