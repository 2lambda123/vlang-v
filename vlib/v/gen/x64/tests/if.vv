fn test() {
	a := 1
	if a == 1 {
		println('a == 1')
		b := 2
		if b == 2 {
			println('b == 2')
		}
		//if b != 2 {
			//println('b != 2')
		//}
	}
	if a == 2 {
		println('a == 2')
	}
	a++
	if a == 2 {
		println('now a == 2')
	}
}

fn loop() {
	mut i := 0
	for i < 5 {
		println('hello')
		i++
	}
}

fn foo(a int) {
	println('foo:')
	if a == 1 {
		println('a == 1')
	}
	a++
	if a == 2 {
		println('a == 2')
	}
	if a == 3 {
		println('a == 3')
	}
}

fn args() {
	println('===args===')
	foo(1)
	foo(2)
}

fn main() {
	test()
	loop()
	args()
}
